<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ButtonActivity">

    <hivatec.ir.hivatectools.views.HivaButton

        android:id="@+id/hiva_button"

        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        app:heightPadding="10dp"
        app:icon="@drawable/ic_cached_black_24dp"
        app:iconPosition="right"
        app:radius="5dp"
        app:text="hello"
        app:textColor="#fff"
        app:typeface="IRANSansMobile.ttf"

        app:widthPadding="50dp" />
    <hivatec.ir.hivatectools.views.HivaButton

        android:id="@+id/hiva_button3"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:heightPadding="10dp"
        app:icon="@drawable/ic_cached_black_24dp"
        app:iconPosition="left"
        app:radius="5dp"
        app:text="hello"
        app:textColor="#fff"
        app:typeface="IRANSansMobile.ttf"

        app:widthPadding="50dp" />


    <hivatec.ir.hivatectools.views.HivaButton

        android:id="@+id/hiva_button_top"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:heightPadding="20dp"
        app:icon="@drawable/ic_cached_black_24dp"
        app:iconPosition="top"
        app:radius="5dp"
        app:text="hello"
        app:textColor="#fff"
        app:typeface="IRANSansMobile.ttf"
        app:widthPadding="20dp" />



    <hivatec.ir.hivatectools.views.HivaButton

        android:id="@+id/hiva_button_bottom"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:heightPadding="20dp"
        app:icon="@drawable/idea_on"
        app:iconPosition="bottom"
        app:radius="5dp"
        app:text="hello"
        app:textSize="24sp"
        app:textColor="#fff"
        app:typeface="IRANSansMobile.ttf"
        app:iconTint="@android:color/transparent"

        app:widthPadding="20dp" />

    <hivatec.ir.hivatectools.views.HivaButton

        android:id="@+id/hiva_button4"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:heightPadding="10dp"

        app:radius="45dp"
        app:text="hello"
        app:textColor="#fff"
        app:typeface="IRANSansMobile.ttf"

        app:widthPadding="50dp" />



    <hivatec.ir.hivatectools.views.HivaButton

        android:id="@+id/hiva_button_nobg"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:heightPadding="10dp"

        app:radius="45dp"
        app:text="hello"
        app:textColor="@color/colorPrimaryDark"
        app:typeface="IRANSansMobile.ttf"
        app:backgroundColor="@android:color/transparent"

        app:widthPadding="50dp" />

    <hivatec.ir.hivatectools.views.HivaButton

        android:id="@+id/hiva_button_drawable"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:heightPadding="10dp"

        app:radius="45dp"
        app:text="hello"
        app:textColor="#fff"
        app:typeface="IRANSansMobile.ttf"
        app:backgroundDrawable="@drawable/button_border"

        app:widthPadding="50dp" />



    <hivatec.ir.hivatectools.views.HivaButton

        android:id="@+id/hiva_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:heightPadding="10dp"
        app:icon="@drawable/ic_cached_black_24dp"
        app:iconPosition="right"
        app:iconWidth="40dp"
        app:radius="60dp"
        app:space="0dp"
        app:text=""
        app:textColor="#fff"
        app:textSize="18sp"
        app:typeface="IRANSansMobile.ttf"
        app:widthPadding="10dp" />


</LinearLayout>