<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hivatec.ir.hivatectoolstest.activities.ViewBinderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/HivaAppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/HivaAppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>


        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <hivatec.ir.hivatectoolstest.view.BlueView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:title = "hello"
                app:icon = "@drawable/ic_check"
                app:backgroundColor = "#ac5151"
                app:textColor = "#ffffff"
                app:textSize = "14sp"
                >

            </hivatec.ir.hivatectoolstest.view.BlueView>


            <hivatec.ir.hivatectoolstest.view.ConView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:image="@drawable/ic_check"
                app:title="Best Offer"
                app:desc="Epsum factorial non deposit quid pro quo hic escorol. Olypian quarrels et gorilla congolium sic ad nauseum. Souvlaki ignitus carborundum e pluribus unum. Defacto lingo est igpay atinlay. Marquee selectus non provisio incongruous feline nolo contendre. Gratuitous octopus niacin, sodium glutimate."
                >


            </hivatec.ir.hivatectoolstest.view.ConView>



            <hivatec.ir.hivatectoolstest.view.GalleryView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:title="hello"
                app:desc="this is desc"
                app:image="@drawable/ic_check"
                app:title_textColor="@color/Red"

                />


        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
