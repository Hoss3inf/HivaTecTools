<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hivatec.ir.hivatectoolstest.activities.RadioActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
        android:layout_height="match_parent">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="رادیو لیست"
        android:textSize="12sp"
        android:layout_margin="20dp"
        />


    <hivatec.ir.hivatectools.hivaRadioView.HivaRadioView
            android:id="@+id/hivaRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            app:textColor="@color/Red"
            app:textSize="14sp"
            >


        </hivatec.ir.hivatectools.hivaRadioView.HivaRadioView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="چک لیست"
            android:textSize="12sp"
            android:layout_margin="20dp"
            />


        <hivatec.ir.hivatectools.HivaCheckBoxView
            android:id="@+id/hivaCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:colNum="2"
            >


        </hivatec.ir.hivatectools.HivaCheckBoxView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:onClick="check"
        />

</LinearLayout>


</android.support.design.widget.CoordinatorLayout>
