<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionBar"
            android:background="@color/actionBar"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="@dimen/actionBar"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="8dp">

                    <RelativeLayout
                        android:id="@+id/actionbar_left_layout"
                        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
                        android:layout_width="@dimen/actionBar"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/ripple"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/actionbar_left_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_arrow_back"

                            android:tint="@color/White" />
                    </RelativeLayout>

                </RelativeLayout>


                <TextView
                    android:id="@+id/actionbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/iransansmobilemedium"
                    android:gravity="center"

                    android:text="منو برگر"
                    android:textColor="#fff"
                    android:textSize="18sp" />


                <RelativeLayout
                    android:layout_width="@dimen/actionBar"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:padding="8dp">


                    <RelativeLayout
                        android:id="@+id/actionbar_right_layout"

                        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
                        android:layout_width="@dimen/actionBar"
                        android:layout_height="match_parent"

                        android:background="@drawable/ripple"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/actionbar_right_img"
                            android:layout_width="18dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_rubbish_bin" />
                    </RelativeLayout>
                </RelativeLayout>


            </RelativeLayout>


        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


</RelativeLayout>
