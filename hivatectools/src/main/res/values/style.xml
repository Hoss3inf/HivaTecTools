<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HivaAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/DarkGreen</item>
        <item name="colorPrimaryDark">#7c000a</item>
        <item name="colorAccent">#ffe41b</item>
        <item name="android:colorControlHighlight">#88ffffff</item>
    </style>


    <style name="HivaAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HivaAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="HivaAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="ActionbarButtonStyle" parent="Base.Widget.AppCompat.ActionButton" >

        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="android:colorControlHighlight">@color/White</item>
    </style>

    <style name="ActionBarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/White</item>
        <item name="colorControlNormal">@color/White</item>
        <item name="actionButtonStyle">@style/ActionbarButtonStyle</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="colorControlHighlight">@color/White</item>
    </style>

</resources>